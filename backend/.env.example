# Plaid API Credentials
# Sign up at https://dashboard.plaid.com/signup
PLAID_CLIENT_ID=your_client_id_here
PLAID_SECRET=your_secret_here
PLAID_SECRET_SANDBOX=your_sandbox_secret_here
PLAID_SECRET_PRODUCTION=your_production_secret_here

# Environment: sandbox, development, or production
PLAID_ENV=sandbox

# OpenAI API Credentials (for AI-powered insights)
# Sign up at https://platform.openai.com/signup
# Required for Proactive Guidance feature
OPENAI_API_KEY=sk-your-openai-key-here

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_EXPIRY=15m

# Encryption for Plaid tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_here

# Apple Sign In
APPLE_BUNDLE_ID=com.financialanalyzer.app

# Optional: For production
# PLAID_REDIRECT_URI=https://yourdomain.com/oauth-redirect
