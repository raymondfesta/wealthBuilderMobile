{
  "name": "financial-analyzer-backend",
  "version": "1.0.0",
  "description": "Backend server for Financial Analyzer iOS app - handles Plaid API integration",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:reset": "node -e \"require('fs').writeFileSync('plaid_tokens.json', '{}')\" && echo '✅ Tokens cleared. Restart server to apply.' && npm run dev",
    "reset": "node -e \"require('fs').writeFileSync('plaid_tokens.json', '{}')\" && echo '✅ Backend tokens cleared'"
  },
  "keywords": [
    "plaid",
    "financial",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.2.0",
    "plaid": "^21.0.0",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
